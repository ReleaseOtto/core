{
  "compilerOptions": {
    "outDir": "./lib/cjs",
    "baseUrl": "./src",
    "declaration": false,
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": ["node_modules", "lib"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}